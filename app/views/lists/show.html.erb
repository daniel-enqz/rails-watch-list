<div class = "banner">
  <h1> <%= @list.name %></h1>
  <div class="banner-buttons">
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-secondary addbookmark-button-addons" %>
    <%= link_to "My Listsüçø", root_path, class: "btn btn-secondary back-button-addons"%>
  </div>
  <img src="<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>" alt="list-image">
</div>

<div class="d-flex flex-wrap">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="flip-card m-2">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <img src="<%= image_path "#{bookmark.movie.poster_url}" %>" alt="...">
        </div>
        <div class="flip-card-back">
          <%= link_to "delete", bookmark_path(bookmark), method: :delete,  data: { confirm: 'Are you sure?' }, class: "category-remove-link" %>
          <div class="card-body">
            <h4 class="card-title"><%= bookmark.movie.title %></h4>
            <p><%= bookmark.movie.overview %></p>
            <p class="card-text">-<%= bookmark.comment %> ‚ùû</p>
            <h5>‚≠êAudience Rating: <%= bookmark.movie.rating %></h5>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

