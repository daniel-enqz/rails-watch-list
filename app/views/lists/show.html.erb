<div class = "banner">
  <h1> <%= @list.name %></h1>
  <div class="banner-buttons">
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-secondary addbookmark-button-addons" %>
    <%= link_to "My Listsüçø", lists_path, class: "btn btn-secondary back-button-addons"%>
  </div>
  <video class="background-video" autoplay loop muted poster="https://assets.codepen.io/6093409/river.jpg">
    <source src="<%= video_path "main_banner.mp4" %>" type="video/mp4">
  </video>
</div>

<div class="category-container">
  <div class="category-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="category-card m-2">
         <%= link_to '&times;'.html_safe, bookmark_path(bookmark), method: :delete, class: "card-remove-link",  data: { confirm: 'Are you sure?' } %>
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <div class="d-flex align-center">
            <div><h2 class="card-title"><%= bookmark.movie.title %></h2></div>
            <div><h5>‚≠ê<%= bookmark.movie.rating %></h5></div>
          </div>
          <p><%= bookmark.movie.overview %></p>
          <p class="card-text"><%= bookmark.comment %> ‚ùû</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
